@{
    ViewData["Title"] = "Home";
}
@using CollectionsManager.Models
@* <img id="homeboy" src="~/assets/images/logo.png"> *@
<div class="home-div">
    <form class="form-row angled-card zindex1" method="get" action="/">
        <input name="searchTerm" class="input-lg" type="text" placeholder="search" />
        <input type="submit" class="button button-lg zindex3" value="Search" />
    </form>
</div>
<div id="searchResults">
@if (Model != null)
{
    @if (Model.Collections.Count > 0)
    {
        <h2>Collections</h2>
        @foreach (var collection in Model.Collections)
        {
            <a href="/collections/details/@collection.CollectionId">
    <p>@collection.Name</p>
</a>
        }
    }
    @if (Model.Items.Count > 0)
    {
        <h2>Items</h2>
        @foreach (var item in Model.Items)
        {
            <a href="/items/details/@item.ItemId">
    <p>@item.Name</p>
</a>
        }
    }
    @if (Model.Tags.Count > 0)
    {
        <h2>Tags</h2>
        @foreach (var tag in Model.Tags)
        {
            <a href="/tags/details/@tag.TagId">
    <p>@tag.Name</p>
</a>
        }
    }
}
</div>