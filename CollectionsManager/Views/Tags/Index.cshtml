@using CollectionsManager.Models;
@model List<CollectionsManager.Models.Tag>;

@{
    ViewData["Title"] = "All Tags";
}
<div class="index">
    <div>
        <h1>Tags</h1>
        <div class="form-row">
            <form class="form-row" asp-controller="Tags" asp-action="Index">
                <input class="input" type="text" name="SearchString" placeholder="search"
                    style="padding-right: 50px;" />
                <button class="button" type="submit" style="position: relative; margin-left: -50px;">Filter</button>
            </form>
            <a class="button" asp-controller="Tags" asp-action="Create">New Tag</a>
        </div>
    </div>
    <hr />
    @if (@Model.Count == 0)
    {
        <h3>No tags have been added...</h3>
    }

    @foreach (Tag tag in Model)
    {
        <h3>@Html.ActionLink($"{@tag.Name}", "Details", new { id = tag.TagId }) |
            Used @tag.ItemTagJoinEntities.Count() times</h3>
    }
</div>
