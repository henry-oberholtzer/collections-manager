@using CollectionsManager.Models;
@model List<CollectionsManager.Models.Tag>;

@{
    ViewData["Title"] = "All Tags";
}
<div class="index">
    <h1>Tags</h1>
    <div>
        <form asp-controller="Items" asp-action="Index">
            <p>
                <input type="text" name="SearchString" placeholder="search" />
                <input type="submit" value="Filter" />
            </p>
        </form>
        <h3>All tags:</h3>
    </div>
    @if (@Model.Count == 0)
    {
        <h3>No tags have been added...</h3>
    }

    @foreach (Tag tag in Model)
    {
        <h3>@Html.ActionLink($"{@tag.Name}", "Details", new { id = tag.TagId }) |
            Used @tag.ItemTagJoinEntities.Count() times</h3>
    }

    @Html.ActionLink("Add new tag", "Create", "Tags", null, new { @class = "button" })
</div>
