@using CollectionsManager.Models;
<div class="index">
  <div>
    <h1>Collections</h1>
    <div class="form-row">
      <form class="form-row" asp-controller="Collections" asp-action="Index">
        <input class="input" type="text" name="SearchString" placeholder="search" style="padding-right: 50px;" />
        <button class="button" type="submit" style="position: relative; margin-left: -50px;">Filter</button>
      </form>
      <a class="button" asp-controller="Collections" asp-action="Create">New Collection</a>
    </div>
  </div>
  <hr />
  @if (@Model.Count == 0)
  {
    <h3>No collections have been added...</h3>
  }

  @foreach (Collection collection in Model)
  {
    <h3>@Html.ActionLink($"{@collection.Name}", "Details", new { id = collection.CollectionId })</h3>
  }
</div>
